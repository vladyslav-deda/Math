<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/main_orange">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/comic_relief"
        android:textColor="@color/main_green"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/notification"
        tools:text="Рахунок: 45" />

    <LinearLayout
        android:id="@+id/notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:visibility="invisible"
        android:background="@drawable/back_for_item"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image_notification"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:src="@drawable/finik" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/text_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/comic_relief"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"
            tools:text="Подумай краще"
            tools:visibility="visible" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_zadacha"
        android:background="@drawable/rounded_white_backgroung"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24sp"
        android:fontFamily="@font/comic_relief_bold"
        android:padding="10dp"
        android:textColor="@color/main_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/notification"
        android:layout_margin="25dp"
        tools:text="Тато приніс з магазину 13 кг огірків, а мама 12 кг помідорів. Скільки кілограмів овочів принесли батьки з магазину?" />

    <TextView
        android:id="@+id/tv_input_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        android:fontFamily="@font/comic_relief_bold"
        android:gravity="center"
        android:text="Введи свою  правильну відповідь:"
        android:textColor="@color/main_green"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_zadacha" />
    <!--        android:textColor="#F5F5DC"-->
    <EditText
        android:id="@+id/etAnswer"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_margin="25dp"
        android:background="@null"
        android:fontFamily="@font/comic_relief_bold"
        android:gravity="center"
        android:hint="0"
        android:textColor="@color/main_green"
        android:textColorHint="@color/main_green"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/keyboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_input_answer" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@null"
        android:padding="20dp"
        android:text="Відповісти"
        android:textColor="@color/main_green"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent" />

    <com.konaire.numerickeyboard.NumericKeyboard
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:textDirection="firstStrong"
        app:field="@+id/etAnswer"
        app:keyTextColor="#F5F5DC"
        app:keyTextSize="26sp"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>